<div class="container mt-5">
  <h1>OTP Generated in Console</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/otp" method="POST">
            <div class="form-group">
              <label for="otp">OTP</label>
              <input type="text" name="userotp">
            </div>
            <button type="submit" class="btn btn-dark">Submit OTP</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

